<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh đại diện bo tròn -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile_placeholder"
            android:contentDescription="Profile Image"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M2K"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="24dp" />

        <!-- Nút chuyển sang Lịch sử -->
        <Button
            android:id="@+id/view_history_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="movie viewing history"
            android:textAllCaps="true"
            android:layout_marginTop="16dp" />

        <!-- Nút chuyển sang Yêu thích -->
        <Button
            android:id="@+id/view_favorites_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="favorite movie list"
            android:textAllCaps="true"
            android:layout_marginTop="12dp" />

        <!-- Nút Logout -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
